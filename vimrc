" General settings {{{
" This sets the vs code theme for vim, using vim-code-dark plugin
colorscheme iceberg
let g:NERDTreeNodeDelimiter = "\u00a0"
set clipboard^=unnamed
inoremap jk <ESC>
set spell spelllang=en_us,it
syntax enable
set number
set incsearch
set hlsearch
" }}}

" Folding settings {{{
"=== folding ===
set foldmethod=marker
set foldlevel=0
set modelines=1
" vim:foldmethod=marker:foldlevel=0
" }}}


